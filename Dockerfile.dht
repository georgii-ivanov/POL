FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    pkg-config \
    libffi-dev \
    libssl-dev \
    libgmp-dev \
    && rm -rf /var/lib/apt/lists/*

COPY requirements-dht.txt .
RUN pip install --no-cache-dir -r requirements-dht.txt

COPY dht_daemon.py .

RUN mkdir -p /dht_db

EXPOSE 13337

CMD ["python3", "dht_daemon.py", "--listen", "0.0.0.0:13337", "--solo"] 